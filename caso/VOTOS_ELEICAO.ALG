escolha numero
caso 1
     escreval("Você votou no Fulano!")
     votoF<-votoF+1
caso 2
     escreval("Você votou no Ciclano!")
     votoC<-votoC+1
caso 3
     escreval("Você votou no Beltrano!")
     votoB<-votoB+1
outrocaso
     escreval ("Você votou nulo!")
     votoN<-votoN+1
fimescolha


//saida
limpatela
escreval("----------Resultado da Eleição---------------")
escreval("Fulano recebeu o total de: ",votoF," votos")
